# Cloudflare R2 Configuration for Image Uploads
# Set USE_R2=true to enable R2 uploads, otherwise local storage is used

# Enable/Disable R2 (set to "true" to enable)
USE_R2=true

# R2 Account ID (from Cloudflare Dashboard)
R2_ACCOUNT_ID=your_account_id_here

# R2 API Credentials (create in Cloudflare R2 dashboard)
R2_ACCESS_KEY_ID=your_access_key_here
R2_SECRET_ACCESS_KEY=your_secret_key_here

# R2 Bucket Name
R2_BUCKET_NAME=burmatwod

# R2 Public URL (your custom domain or R2 public URL)
# Example: https://pub-xxxxx.r2.dev
# or your custom domain: https://cdn.yourdomain.com
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev
